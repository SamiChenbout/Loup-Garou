<!-- Chat Room -->
    <div id="messages" class="message-box">
      <% @game.messages.each do |message| %>
        <% if message.player.character.name != "loup" %>
            <%= render 'messages/show', message: message, user: current_user %>
        <% end %>
      <% end %>
    </div>

  <div class="message-form">
