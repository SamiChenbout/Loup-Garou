
<!-- MAIN CHATROOM -->
<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
    <% if @game.step == "waiting" %>
      <%= render "waiting" %>
    <% elsif @game.step == "starting" %>
      <%= render "starting" %>
    <% else %>
      <%= render "finished" %>
    <% end %>

    <h3><%= @game.news %></h3>
      <div class="chat-header"><h4>Main Chat</h4></div>
        <div id="messages" class="messages">
        </div>
        <div class="message-form">
          <%= render 'messages/form', game: @game, message: @message, player: @gamer %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- EMPTY DIV EMBEDDING DATA -->
<div id="connect-to-game-channel" data-game-id="<%= @game.id %>" data-current-user-id="<%= current_user.id %>"></div>

