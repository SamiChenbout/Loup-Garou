<h1>I am the FULL game room nÂ°<%= @game.id %></h1>
<% if @game.round == 1 && @game.round_step == "waiting" %>
  <%= render 'player_number' %>
<% end %>

<% if @chasseur.state_chasseur == "dead-start" %>
  <% @game.update(round_step: "chasseur") %>
  <%= render "./game_events/chasseur" %>
<% else %>
  <% if @gamer.is_alive %>
    <%= simple_form_for([@game, GameEvent.new]) do |f| %>
      <%= f.input :target, as: :radio_buttons, collection: @all_except_me.map { |target| target.user.username } %>
      <%= f.button :submit, "Vote!", class: "btn btn-primary" %>
    <% end %>
  <% end %>
<% end %>
