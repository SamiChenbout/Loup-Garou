<div id="circle15"></div>
<div class="my-nav navbar navbar-expand-sm navbar-light navbar-lewagon maitre-head">
  <img src="https://image.noelshack.com/fichiers/2019/35/6/1567258841-meuf.gif" alt="" class="mj">
  <% if @gamer.character.name == "loup" %>
  <h2 class="mj-text">Ca sent la chair fraiche...</h2>
  <% elsif @gamer.character.name == "voyante" %>
  <h2 class="mj-text">Discretion est maitre mot !</h2>
  <% elsif @gamer.character.name == "sorciere" %>
  <h2 class="mj-text">La mort t'accompagne</h2>
  <% elsif @gamer.character.name == "cupidon" %>
  <h2 class="mj-text">Amour, quelle aventure !</h2>
  <% elsif @gamer.character.name == "chasseur" %>
  <h2 class="mj-text">Vengeance n'est point solution</h2>
  <% end %>

  <div id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.photo.url != nil %>
          <%= image_tag current_user.photo.url, class: "avatar" %>
          <% else %>
          <%= image_tag "https://www.shareicon.net/data/128x128/2015/09/27/107947_doc_512x512.png", class: "avatar" %>
          <% end %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="allplayers">
  <% @all_except_me.each do |player| %>
    <div class="player mx-3">
      <div class="player-photo">
        <% if player.user.photo.url != nil %>
          <%= image_tag player.user.photo.url, class: "avatar" %>
        <% else %>
          <%= image_tag "https://images.assetsdelivery.com/compings_v2/gmast3r/gmast3r1511/gmast3r151100776.jpg", class: "avatar" %>
        <% end %>
      </div>
      <div class="player-name">
        <p><%= player.user.username.capitalize %></p>
      </div>
    </div>
  <% end %>
</div>

<div id="countdown"></div>

<div class="role">
  <div class="character">
    <%= image_tag @gamer.character.photo.url, class: "avatar" %>
  </div>
  <h4 class="info"> Tu es un<% if @gamer.character.name == "sorciere" || @gamer.character.name == "voyante"%>e<%end%> <%= @gamer.character.name %></h4>
  <div class="description">
    <h4><%= @gamer.character.description %></h4>
  </div>
</div>

<div class="other-role">
  <% Character.all.each do |character| %>
    <% if character.name != @gamer.character.name %>
      <div class="other-role-card">
        <div class="character">
          <%= image_tag character.photo.url %>
        </div>
        <div class="name">
          <p><%= character.name.capitalize %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div id="connect-to-game-channel" data-game-id="<%= @game.id %>" data-current-user-id="<%= current_user.id %>"></div>
<div class="show-role"></div>

